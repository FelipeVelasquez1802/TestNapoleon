<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewCustom" parent="android:Widget.Material.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewCustom.Title" parent="TextViewCustom">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewCustom.Line" parent="TextViewCustom">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="TextViewCustom.Body" parent="TextViewCustom">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
